generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


model Van {
  id String @id @default(cuid())
  name String 
  price Int
  description String
  imageUrl String 
  type Type
  hostId String
}

enum Type {
  SIMPLE
  LUXURY
  RUGGED
}