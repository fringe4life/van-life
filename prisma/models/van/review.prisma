model Review {
  createdAt DateTime @default(now()) @db.Date
  updatedAt DateTime @updatedAt @db.Date
  text      String   @db.VarChar(512)
  userId    String   @db.VarChar(25)
  rating    Int      @db.SmallInt
  rentId    String   @db.VarChar(25)
  id        String   @id @default(cuid()) @db.VarChar(25)
  rent      Rent     @relation(fields: [rentId], references: [id])
  user      UserInfo @relation(fields: [userId], references: [userId])

  // Indexes optimized for actual query patterns
  @@index([rating(sort: Desc)]) // Used in: getHostReviewsPaginated (rating sorts)
  @@index([createdAt(sort: Desc)]) // Used in: getHostReviews, getHostReviewsPaginated, getHostReviewsChartData
}
