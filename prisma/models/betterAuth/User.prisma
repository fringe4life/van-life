model User {
  id            String    @id @default(cuid()) @db.VarChar(25)
  name          String
  email         String    @unique
  emailVerified Boolean
  image         String?
  createdAt     DateTime?
  updatedAt     DateTime?
  role          String?
  banned        Boolean?
  banReason     String?
  banExpires    DateTime?
  firstName     String?
  lastName      String?
  phone         String?
  userInfo      UserInfo?
  Account       Account[]
  Session       Session[]

  @@map("user")
}
