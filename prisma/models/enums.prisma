enum VanType {
  SIMPLE @map("simple")
  LUXURY @map("luxury")
  RUGGED @map("rugged")
}

enum TransactionType {
  DEPOSIT        @map("deposit")
  WITHDRAW       @map("withdraw")
  RENTAL_PAYMENT @map("rental_payment") // Renter pays host
  RENTAL_RETURN  @map("rental_return") // Host pays renter when van is returned
}

enum VanState {
  IN_REPAIR @map("in_repair")
  ON_SALE   @map("on_sale")
  AVAILABLE @map("available")
}
